<%= simple_form_for @post do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :price, :placeholder => '$', :hint => "prices should be in USD"%>
  <%= f.input :city %>
  <%= f.input :state, :placeholder => 'MA' %>
  <%= f.button :submit %>
  
<% end %>