<div class="container">
	<div class="hero-unit">
	
			<h2><%= @post.title %></h2> by <%= link_to @post.user.name, new_profile_path(@post.user.id) %>
	</div>
	
	<div class=span12>
			<h3>Location: 
				<% if @post.address %> <%= @post.address %>, <%end %> 
				<%= @post.city %>, <%= @post.state %> </h3>
			<p><strong><%= @post.content %></p>
				<% if @post.price.to_i > 0 %>
					<h3>$ <%= @post.price %> per lesson</h3>
				<% else %> <h3>Free!</h3>
				<% end %>
			<div id="map">
			<p>MAP<p>
			</div>
	</div>
	<% if !current_user || current_user.id != @post.user.id %>
	<div class=span2>
		<a class="btn primary large">REGISTER</a>
	</div>
	<% end %>
</div>




